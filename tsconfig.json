{
  "compilerOptions": {
    /* Language & environment */
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Module system */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interop & imports */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,

    /* Runtime */
    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
